<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import musicary.graphics.components.MButtonVariant?>
<?import musicary.graphics.components.MPasswordIconTextFieldWhite?>

<VBox fx:controller="musicary.controllers.ProfileController" alignment="CENTER" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Modifica impostazioni profilo" textFill="#ff004e">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="30.0" layoutY="30.0" text="Cambia la tua password" textFill="#ff004e">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <Label layoutX="137.0" layoutY="86.0" text="Inserisci la password attuale" textFill="#ff004e">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="40.0" />
         </VBox.margin>
      </Label>
        <MPasswordIconTextFieldWhite fx:id="passwordField" maxWidth="300.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></MPasswordIconTextFieldWhite>
      <Label layoutX="139.0" layoutY="137.0" text="Inserisci la nuova password" textFill="#ff004e">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </VBox.margin>
      </Label>
      <MPasswordIconTextFieldWhite fx:id="newPasswordField" maxWidth="300.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin></MPasswordIconTextFieldWhite>
      <MButtonVariant text="Invia" onMouseClicked="#checkPassword">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></MButtonVariant>
   </children>
</VBox>
